<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Aihao.ViewModels"
             x:Class="Aihao.Views.NarrationTokenPopup"
             x:DataType="vm:NarrationTokenPopupViewModel"
             Width="220" MaxHeight="300">
    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
            BorderThickness="1" CornerRadius="4" Padding="4">
        <DockPanel>
            <TextBox DockPanel.Dock="Top" Text="{Binding SearchText}" Watermark="Search..."
                     FontSize="12" Margin="0,0,0,4" x:Name="SearchBox"/>
            <ListBox ItemsSource="{Binding FilteredItems}"
                     SelectedItem="{Binding SelectedItem}"
                     MaxHeight="240" FontSize="12"/>
        </DockPanel>
    </Border>
</UserControl>
