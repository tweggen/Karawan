<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Aihao.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="200"
             x:Class="Aihao.Views.ConsoleWindow"
             x:DataType="vm:ConsoleWindowViewModel"
             Focusable="True">
    
    <DockPanel>
        <!-- Toolbar -->
        <Border DockPanel.Dock="Top" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Padding="4">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Left: Title and Filters -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Console" FontWeight="SemiBold" VerticalAlignment="Center" Margin="4,0"/>
                    <Separator/>
                    <ToggleButton IsChecked="{Binding ShowInfo}" 
                                  Content="â„¹ï¸ Info" 
                                  ToolTip.Tip="Show Info Messages"
                                  Padding="6,2"/>
                    <ToggleButton IsChecked="{Binding ShowWarning}" 
                                  Content="âš ï¸ Warn" 
                                  ToolTip.Tip="Show Warnings"
                                  Padding="6,2"/>
                    <ToggleButton IsChecked="{Binding ShowError}" 
                                  Content="âŒ Error" 
                                  ToolTip.Tip="Show Errors"
                                  Padding="6,2"/>
                    <ToggleButton IsChecked="{Binding ShowDebug}" 
                                  Content="ðŸ” Debug" 
                                  ToolTip.Tip="Show Debug Messages"
                                  Padding="6,2"/>
                </StackPanel>
                
                <!-- Center: Search -->
                <TextBox Grid.Column="1" 
                         Text="{Binding SearchText}"
                         Watermark="Filter messages..."
                         Margin="8,0"
                         MaxWidth="300"
                         HorizontalAlignment="Left"/>
                
                <!-- Right: Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                    <ToggleButton IsChecked="{Binding AutoScroll}" 
                                  Content="â†“" 
                                  ToolTip.Tip="Auto-scroll"
                                  Padding="6,2"/>
                    <Button Content="ðŸ“‹" 
                            ToolTip.Tip="Copy to Clipboard (Ctrl+C)"
                            Command="{Binding CopyToClipboardCommand}"
                            Padding="6,2"/>
                    <Button Content="ðŸ’¾" 
                            ToolTip.Tip="Save to File"
                            Command="{Binding SaveToFileCommand}"
                            Padding="6,2"/>
                    <Button Content="ðŸ—‘ï¸" 
                            ToolTip.Tip="Clear Console"
                            Command="{Binding ClearCommand}"
                            Padding="6,2"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Log Output - Selectable Text -->
        <Border Background="#1A1A1A">
            <ScrollViewer Name="LogScrollViewer" 
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <SelectableTextBlock Name="LogTextBlock"
                                     Text="{Binding FormattedOutput}"
                                     FontFamily="Consolas,Courier New,monospace"
                                     FontSize="12"
                                     Foreground="#CCCCCC"
                                     Padding="4"
                                     TextWrapping="NoWrap"/>
            </ScrollViewer>
        </Border>
    </DockPanel>
    
    <UserControl.KeyBindings>
        <KeyBinding Gesture="Ctrl+A" Command="{Binding SelectAllCommand}"/>
        <KeyBinding Gesture="Cmd+A" Command="{Binding SelectAllCommand}"/>
    </UserControl.KeyBindings>
</UserControl>
